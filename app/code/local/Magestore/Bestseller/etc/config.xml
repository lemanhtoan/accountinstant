<?xml version="1.0"?>
<config>
    <modules>
        <Magestore_Bestseller>
            <version>0.1.0</version>
        </Magestore_Bestseller>
    </modules>
    <frontend>
        <routers>
            <bestseller>
                <use>standard</use>
                <args>
                    <module>Magestore_Bestseller</module>
                    <frontName>bestseller</frontName>
                </args>
            </bestseller>
        </routers>
        <layout>
            <updates>
                <bestseller>
                    <file>bestseller.xml</file>
                </bestseller>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
			<bestseller>
				<use>admin</use>
				<args>
					<module>Magestore_Bestseller</module>
					<frontName>bestseller</frontName>
				</args>
			</bestseller>
        </routers>
    </admin>
    <adminhtml>
		
		<acl>
			<resources>
				<all>
					<title>Allow Everything</title>
				</all>
				<admin>
					<children>
						<Magestore_Bestseller>
							<title>Bestseller Module</title>
							<sort_order>10</sort_order>
						</Magestore_Bestseller>
					</children>
				</admin>
			</resources>
		</acl>
		<layout>
			<updates>
				<bestseller>
					<file>bestseller.xml</file>
				</bestseller>
			</updates>
		</layout>
    </adminhtml>   
    <global>
        <models>
            <bestseller>
                <class>Magestore_Bestseller_Model</class>
                <resourceModel>bestseller_mysql4</resourceModel>
            </bestseller>
            <bestseller_mysql4>
                <class>Magestore_Bestseller_Model_Mysql4</class>
                <entities>
                    <bestseller>
                        <table>bestseller</table>
                    </bestseller>
                </entities>
            </bestseller_mysql4>
        </models>
        <resources>
            <bestseller_setup>
                <setup>
                    <module>Magestore_Bestseller</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </bestseller_setup>
            <bestseller_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </bestseller_write>
            <bestseller_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </bestseller_read>
        </resources>
        <blocks>
            <bestseller>
                <class>Magestore_Bestseller_Block</class>
            </bestseller>
        </blocks>
        <helpers>
            <bestseller>
                <class>Magestore_Bestseller_Helper</class>
            </bestseller>
        </helpers>
    </global>
</config>