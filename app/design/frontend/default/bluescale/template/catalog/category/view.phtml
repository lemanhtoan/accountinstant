/**
 * Category view template
 *
 * @see Mage_Catalog_Block_Category_View
 */
?>
<?php
$_helper    = $this->helper('catalog/output');
$_category  = $this->getCurrentCategory();
$_imgHtml   = '';
if ($_imgUrl = $_category->getImageUrl()) {
    $_imgHtml = '<p class="category-image"><img src="'.$_imgUrl.'" alt="'.$this->htmlEscape($_category->getName()).'" title="'.$this->htmlEscape($_category->getName()).'" /></p>';
    $_imgHtml = $_helper->categoryAttribute($_category, $_imgHtml, 'image');
}
?>
<div class="row">
    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4">
        <?php if($_imgUrl): ?>
            <?php echo $_imgHtml ?>
        <?php endif; ?>

        <a class="free-register" target="_blank" href="<?php echo $_category->getCategoryRegisterlink();?>">
            <?php echo $this->__('free register');?>
        </a>
    </div>
    <div class="col-xs-12 col-sm-6 col-md-8 col-lg-8">
        <div class="page-title category-title">
            <?php if($this->IsRssCatalogEnable() && $this->IsTopCategory()): ?>
                <a href="<?php echo $this->getRssLink() ?>" class="link-rss"><?php echo $this->__('Subscribe to RSS Feed') ?></a>
            <?php endif; ?>
            <h1><?php echo $_helper->categoryAttribute($_category, $_category->getName(), 'name') ?></h1>
        </div>

        <?php echo $this->getMessagesBlock()->getGroupedHtml() ?>


        <?php if($_description=$this->getCurrentCategory()->getDescription()): ?>
            <div class="category-description std">
                <?php echo $_helper->categoryAttribute($_category, $_description, 'description') ?>
            </div>
        <?php endif; ?>
    </div>
</div>

<div class="row content-fulldesc">
    <?php echo $_category->getCategoryFulldes();?>
</div>

<?php if($this->isContentMode()): ?>
    <?php echo $this->getCmsBlockHtml() ?>

<?php elseif($this->isMixedMode()): ?>
    <?php echo $this->getCmsBlockHtml() ?>
    <?php echo $this->getProductListHtml() ?>

<?php else: ?>
    <?php echo $this->getProductListHtml() ?>
<?php endif; ?>


<?php $productBlogs = Mage::getResourceModel('catalog/category')->getAttributeRawValue(Mage::registry('current_category')->getId(), "add_blogs", Mage::app()->getStore()->getId());
 if ($productBlogs) : 
    $blogs = explode(",", $productBlogs);
    
  ?>
 <!-- get list blogs -->
<div class="blog-des">
    <h3>Information</h3>
    <?php 
        $categoryBlogDes = Mage::getResourceModel('catalog/category')->getAttributeRawValue(Mage::registry('current_category')->getId(), "add_blog_descip", Mage::app()->getStore()->getId());
    ?>
    
    <div class="list-contents">
    <?php 
    if ($categoryBlogDes) : 
    ?>
    <p class="des-blog">
        <?php echo $categoryBlogDes; ?>
    </p>
    <?php endif; ?>
    <ul class="list-post-blog">
        <?php foreach( $blogs as $blog) :?>
            <li>
                <?php $post = Mage::getModel('blog/post')->load($blog); ?>
                <a href="#post_<?php echo $post->getIdentifier(); ?>"><?php echo $post->getTitle(); ?></a>
            </li>
        <?php endforeach; ?>
    </ul>
    <div class="list-posts">
        <?php foreach( $blogs as $blog) :?>
            <?php $post = Mage::getModel('blog/post')->load($blog); ?>
            
            <div id="post_<?php echo $post->getIdentifier(); ?>" class="post-line">    
                <h1 class="post-title-h1"><a href="<?php echo Mage::getBaseUrl().'blog/'.$post->getIdentifier(); ?>" ><?php echo $post->getTitle(); ?></a></h1>    
                <p class="p-desciprtion"><?php echo $post->getShortContent(); ?></p>
                <p class="read-more-blog"><a href="<?php echo Mage::getBaseUrl().'blog/'.$post->getIdentifier(); ?>" >Read More</a></p>
            </div>
        <?php endforeach; ?>
    </div>
    </div>
</div>
<!-- end get list blogs -->
<?php endif; ?>