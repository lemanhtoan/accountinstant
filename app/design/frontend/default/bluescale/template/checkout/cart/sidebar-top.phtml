/**
 * Shoping cart sidebar
 *
 * @see Mage_Checkout_Block_Cart_Sidebar
 */

?>
<div id="header">
    <div class="block block-cart block-topcart">
        <div id="cart_block">
            <?php $_cartQty = $this->getSummaryCount() ?>
            <div class="cart-heading">
                <div class="basket-item-count">
                <span id="cart_count_ajax">
                    <span class="count" id="cart_count">
                        <?php if ($_cartQty > 0) {
                            echo $_cartQty;
                        } else {
                            echo '0';
                        }?>
                    </span>
                </span> 
                    <img alt="" src="<?php echo Mage::getBaseUrl(Mage_Core_Model_Store::URL_TYPE_SKIN);?>/common/icon-cart.png">
                </div>
                <div class="total-price-basket">
                    <span class="value" id="total_price"><?php echo Mage::helper('checkout')->formatPrice($this->getSubtotal()) ?></span>
                    <span class="lbl"><button class="btn btn-sup" type="button" title="<?php echo $this->__('Checkout') ?>" class="button-small" onclick="setLocation('<?php echo $this->getCheckoutUrl() ?>')"><span><span><?php echo $this->__('Checkout') ?></span></span></button></span>
                </div>
            </div>
        </div>

        <!-- // block-title -->

        <div class="block-content">
            <?php $_items = $this->getRecentItems() ?>
            <?php if(count($_items)) { ?>
                <p class="block-subtitle"><?php echo $this->__('Products') ?></p>
                <ol id="cart-sidebar" class="mini-products-list">
                    <?php foreach($_items as $_item): ?>
                        <?php echo $this->getItemHtml($_item) ?>
                    <?php endforeach; ?>
                </ol>
                <script type="text/javascript">decorateList('cart-sidebar', 'none-recursive')</script>
            <?php } else {  ?>
               <?php echo $this->__('Empty cart.') ?> 
            <?php } ?>

            <?php  if($_cartQty && $this->isPossibleOnepageCheckout()): ?>
                <div class="actions">
                    <?php echo $this->getChildHtml('extra_actions') ?>
                    <button type="button" title="<?php echo $this->__('Checkout') ?>" class="btn btn-block btn-success" onclick="setLocation('<?php echo $this->getCheckoutUrl() ?>')"><?php echo $this->__('Checkout') ?></button>
                </div>
            <?php endif ?>
        </div>
    </div>
</div>
