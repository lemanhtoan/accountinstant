<script>
	jQuery(document).ready(function() {

		jQuery(".alang.currentStore").on("click", function (e) {
			e.preventDefault();
			return false;
		});
		jQuery(".alang.notCurrent").on("click", function (e) {
			e.preventDefault();
			var urlGo = jQuery(this).attr('href') + '&langredirect=on';
			doRemove(urlGo);
		});
	});

	function doRemove(urlGo) {
		var urlForm = "<?php echo $removeAjax; ?>";
		jQuery.ajax({
			url: urlForm,
			method: 'post',
			dataType:"json",
			success:function(data) {
				//console.log(data, "success");
				window.location.href = urlGo;
			},
			error:function(data) {
				window.location.href = urlGo;
				//console.log(data, " error");
			}
		});

		//console.log("action before href");
	}
</script>


